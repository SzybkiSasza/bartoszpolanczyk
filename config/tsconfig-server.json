{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "../",
    "paths": {
      "server*": ["src/server*"]
    },
    "lib": [
      "ES2017",
      "DOM"
    ],
    "target": "ES2017",
    "module": "ES6",
    "moduleResolution": "node",
    "outDir": "dist/server",
    "sourceMap": true
  },
  "include": [
    "../src/server/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
